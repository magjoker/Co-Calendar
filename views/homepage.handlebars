<div>
    <div>
        <h2>Login</h2>
        <form class="form-login">
            <div class="input-group">
                <label>Email:</label>
                <input class="form-input" type="text" id="email-login" />
            </div>
            <div class="input-group">
                <label>Password:</label>
                <input class="form-input" type="text" id="password-login" />
            </div>
            <div class="input-group">
                <button class="btn-submit" type="submit">Login</button>
            </div>
        </form>
    </div>
    <div>
        <h2>Signup</h2>
        <form class="form-signup">
            <div class="input-group">
                <label>First Name:</label>
                <input class="form-input" type="text" id="first-name-signup" />
            </div>
            <div class="input-group">
                <label>Last Name:</label>
                <input class="form-input" type="text" id="last-name-signup" />
            </div>
            <div class="input-group">
                <label>Phone Number:</label>
                <input class="form-input" type="text" id="phone-signup" />
            </div>
            <div class="form-group">
                <label for="email-signup">Email:</label>
                <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="input-group">
                <label>Password:</label>
                <input class="form-input" type="text" id="password-signup" />
            </div>
            <div class="input-group">
                <button class="btn-submit" type="submit">Signup</button>
            </div>
        </form>
    </div>
</div>

<script src="/scripts/login.js"></script>